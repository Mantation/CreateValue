<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="163dp"
            android:text="Sing In" />

        <View
            android:id="@+id/view1"
            android:layout_width="10dp"
            android:layout_height="359dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="21dp"
            android:background="@color/colorPrimary" />

        <android.support.design.widget.TextInputLayout

            android:id="@+id/txtEmail"
            android:layout_width="202dp"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.973">

            <EditText
                android:id="@+id/email"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/Password"
            android:layout_width="202dp"
            android:layout_height="53dp"
            android:layout_alignBottom="@+id/name"
            android:layout_centerHorizontal="true"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.973">

            <EditText
                android:id="@+id/password"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:hint="password"
                android:inputType="textPassword"
                android:maxLength="50"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/SignIn"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="186dp"
            app:cardBackgroundColor="@color/colorwhite"
            app:cardCornerRadius="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/signin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Sign In"
                    android:textColor="@color/colorPrimaryDark" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tabregister"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="156dp"
            android:textColor="@color/colorPrimary"
            android:text="Register" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">


            <TextView
                android:id="@+id/names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="163dp"
                android:text="Register" />

            <View
                android:id="@+id/view2"
                android:layout_width="10dp"
                android:layout_height="355dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="58dp"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="21dp"
                android:background="@color/colorPrimary" />

            <android.support.design.widget.TextInputLayout

                android:id="@+id/txtRegName"
                android:layout_width="202dp"
                android:layout_height="53dp"
                android:layout_alignTop="@+id/view2"
                android:layout_centerHorizontal="true"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.973">

                <EditText
                    android:id="@+id/regnames"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/txtSurname"
                android:layout_width="202dp"
                android:layout_height="53dp"
                android:layout_below="@+id/txtRegName"
                android:layout_centerHorizontal="true"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.973">

                <EditText
                    android:id="@+id/surname"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:hint="Surname"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/txtRegEmail"
                android:layout_width="202dp"
                android:layout_height="53dp"
                android:layout_alignBottom="@+id/names"
                android:layout_centerHorizontal="true"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.973">

                <EditText
                    android:id="@+id/regemail"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:hint="email"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <RadioGroup
                android:id="@+id/Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtRegEmail"
                android:layout_alignStart="@+id/txtRegEmail"
                android:layout_below="@+id/names"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MALE" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEMALE" />

            </RadioGroup>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/RegPassword"
                android:layout_width="202dp"
                android:layout_height="53dp"
                android:layout_below="@+id/Gender"
                android:layout_centerHorizontal="true"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.973">

                <EditText
                    android:id="@+id/regpassword"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:hint="enter password"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/Reg1Password"
                android:layout_width="202dp"
                android:layout_height="53dp"
                android:layout_below="@+id/RegPassword"
                android:layout_centerHorizontal="true"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.973">

                <EditText
                    android:id="@+id/reg1password"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:hint="confirm password"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/Register"
                android:layout_width="209dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="186dp"
                app:cardBackgroundColor="@color/colorwhite"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Register"
                        android:textColor="@color/colorPrimaryDark" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tabsignin"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="155dp"
                android:textColor="@color/colorPrimary"
                android:text="Sign In" />


        </RelativeLayout>



    </RelativeLayout>
